<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.thorrism.materialdesignskeleton.demo.DemoActivity">

    <com.thorrism.materialdesignskeleton.views.TextViewShadow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:textColor="#666"
        app:textSize="40sp"
        app:text="Demos"
        app:textElevation="@dimen/textShadowMedium" />

    <com.thorrism.materialdesignskeleton.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Examples"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:lineColor="#03A9F4"
        app:lineThickness="1dp"
        app:linePadding="4dp" />

    <com.thorrism.materialdesignskeleton.views.RaisedButton
        android:id="@+id/raised_btn"
        android:layout_width="@dimen/raised_button_width_medium"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:content="Show Dialog"
        app:contentColor="#fff"
        app:backgroundColor="#666"
        app:cornerRadius="4dp"
        app:raisedElevation="2dp"
        app:innerPadding="@dimen/raised_button_padding" />

</LinearLayout>
